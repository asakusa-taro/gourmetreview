<h1 class="mb-5"><%=@shop.name%>の写真一覧</h1>

<div class = "row">
  <div class="col-sm-4">
    <%= form_with(model: @image, local: true) do |form| %>
      <div class="form-group field">
        <%= form.label :image ,'写真の追加'%>
        <%= form.file_field :image%>
      </div>
      <div class="form-group actions">
        <%= form.submit 'Post', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <% @images.each do |i| %>
    <div class="col-md-3">
      <div class="card">
        <div class="card-image">
          <%= image_tag i.image.url ,height: '200px',width: '200px' if i.image? %>
        </div>
      </div>
    </div>
  <% end %>
</div>