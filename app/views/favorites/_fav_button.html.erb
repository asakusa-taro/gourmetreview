  <% if current_user.favoring?(shop) %>
    <%= form_with(model: current_user.favorites.find_by(shop_id: shop.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :favorite_id, shop.id %>
      <%= f.submit 'お気に入りから削除', class: 'btn btn-secondary btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :favorite_id, shop.id%>
      <%= f.submit 'お気に入りに追加', class: 'btn btn-info btn-block' %>
    <% end %>
  <% end %>