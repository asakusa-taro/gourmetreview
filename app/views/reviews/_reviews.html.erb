<ul class="list-unstyled">
  <% reviews.each do |review| %>
    <li class="media mb-3">
    <% if @user.image? %>
      <%= image_tag @user.image.url ,height: '200',width: '200',:alt => 'userの画像'%>
    <% else %>
            <image src="/assets/NoImage.png" height="200" width="200" alt="noimage">
    <% end %>

      <div class="media-body">
        <div>
          <%= link_to review.user.name, user_path(review.user) %> <span class="text-muted">posted at <%= review.created_at %></span>
        </div>
        <div>
          <p><%= review.content %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate reviews %>
</ul>