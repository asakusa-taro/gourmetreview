<h1>お店の投稿</h1>

<%= form_with(model: [@shop], local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'お店の名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content, '何のお店？' %>
    <%= f.text_area :content, class: 'form-control', row: 5  %>
  </div>

  <div class="form-group">
    <%= f.label :business_hours, '営業時間' %>
    <%= f.text_field :business_hours, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :hp, 'ホームページ' %>
    <%= f.text_field :hp, class: 'form-control' %>
  </div>

  <%= f.submit 'お店を共有する', class: 'btn btn-primary btn-block' %>
<% end %>



<div class="mt-3">
  <p><%= link_to '戻る', root_path ,class: 'btn btn-secondary btn-block'%></p>
</div>