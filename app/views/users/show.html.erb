  
    <div class="d-flex flex-wrap justify-content-around	">
      <div>
        <% if @user.image?%>
          <%= image_tag @user.image.url ,height: '200',width: '200',:alt => 'userの画像'%>
        <% else %>
          <image src="/assets/NoImage.png" height="200" width="200" alt="noimage" >
        <% end %>
        <div>
          <p class="mt-2 text-center"><%= @user.name %></p>
        </div>
        <div class="mt-3">
          <% if @user.id == current_user.id %>
          <p><%= link_to 'ユーザ情報の編集', edit_user_path(@user) ,class: 'btn btn-primary btn-block'%></p>
          <% end %>
        </div>
      </div>
      <div class="card" style="width: 40rem;">
        <div class="card-body">
          <h5 class="card-title">Profile</h5>
          <p class="card-text"><%= @user.profile %></p>
        </div>
      </div>
    </div>
  </div>
