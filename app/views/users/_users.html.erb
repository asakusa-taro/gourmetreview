<% if users.any? %>
<div class="row">
  <% users.each do |user| %>
    <div class="col-md-3">
      <div class="card">
        <div class="card-image">
          <% if user.image? %>
            <!--<img src="<%#= gravatar_url(user, { size: 100 }) %>" class="card-img-top" alt="">-->
            <%= image_tag user.image.url ,height: '200px',width: '200px' if user.image?%>
          <% else %>
            <image src="/assets/NoImage.png" style = "height:200px; width:200px;" alt="" %>
          <% end %>
            <h5 class="card-title "> <%= user.name %> </h5>
            <%= link_to 'more', user_path(user) ,class: 'btn btn-primary btn-block' %>

        </div>
      </div>
    </div>
  <% end %>
</div>
  <%= paginate users %>
<% end %>
